<% include head %>

<form class="form-horizontal" role="form" action="/ai/upload" method="post">
  <h2>Upload AI</h2>
  <div class="form-group">
    <label for="file" class="col-sm-2 control-label">Source Code</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="source-code" name="source_code" required rows="17"></textarea>
    </div>
  </div>
  <div class="form-group">
    <pre>Compile with:
    g++ -std=c++11 -O2 -Wall AI.cpp -o AI
    </pre>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Upload!</button>
    </div>
  </div>
</form>

<% include foot %>